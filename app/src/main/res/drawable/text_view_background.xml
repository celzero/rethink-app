<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--background to compensate the transparency under shadow and glow (for bigger depth values)-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="?attr/primaryDarkColor" />
        </shape>
    </item>

    <!--top, dark, inner shadow-->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="?attr/textViewBackground" />
        </shape>
    </item>

    <!--bottom, light, outer glow-->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="?attr/textViewBackground" />
        </shape>
    </item>

    <!--your color-->
    <item
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="?attr/primaryDarkColor" />
        </shape>
    </item>
</layer-list>