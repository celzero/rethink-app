        <RelativeLayout
            android:id="@+id/firewall_http_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/firewall_http_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:alpha="0.5"
                android:drawableEnd="@drawable/ic_right_arrow_white"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5dp"
                android:textColor="?attr/primaryLightColorText" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/http_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@id/firewall_http_stats"
                android:alpha="0.5"
                android:padding="3dp"
                app:indicatorColor="?attr/accentGood"
                app:trackColor="?attr/background" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/firewall_http_shimmer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/homeScreenBtnBackground"
                    android:padding="5dp" />
            </com.facebook.shimmer.ShimmerFrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/firewall_univ_lockdown_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/firewall_univ_lockdown_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:drawablePadding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="start|center"
                android:padding="10dp"
                android:text="@string/univ_firewall_rule_10"
                android:textColor="?attr/primaryTextColor"
                android:textSize="@dimen/large_font_text_view"
                app:drawableStartCompat="@drawable/ic_global_lockdown" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/firewall_univ_lockdown_check"
                style="@style/CustomWidget.MaterialComponents.CompoundButton.Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/firewall_lockdown_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/firewall_lockdown_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:alpha="0.5"
                android:drawableEnd="@drawable/ic_right_arrow_white"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5dp"
                android:textColor="?attr/primaryLightColorText" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/lockdown_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@id/firewall_lockdown_stats"
                android:alpha="0.5"
                android:padding="3dp"
                app:indicatorColor="?attr/accentGood"
                app:trackColor="?attr/background" />


            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/firewall_lockdown_shimmer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/homeScreenBtnBackground"
                    android:padding="5dp" />
            </com.facebook.shimmer.ShimmerFrameLayout>
        </RelativeLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
