            android:lineSpacingExtra="5dp"
            android:padding="5dp"
            android:text="@string/firewall_act_universal_tab"
            android:textColor="?attr/accentGood"
            android:textSize="@dimen/extra_large_font_text_view"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:alpha="0.7"
            android:padding="10dp"
            android:text="@string/universal_firewall_explanation"
            android:textColor="?attr/primaryLightColorText"
            android:textSize="@dimen/default_font_text_view" />

