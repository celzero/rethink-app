<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background">

    <!-- App Bar with Gradient Overlay -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="@string/lbl_server_config"
            app:expandedTitleMarginStart="20dp"
            app:expandedTitleMarginTop="16dp">

            <!-- Hero Header Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingTop="56dp"
                app:layout_collapseMode="parallax">

                <!-- Config Name with Premium Typography -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/config_name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:letterSpacing="0.01"
                    android:maxLines="2"
                    android:textSize="24sp"
                    android:textColor="?attr/primaryTextColor"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/config_id_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Premium Server" />

                <!-- ID Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/config_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textSize="11sp"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="28dp"
                    app:chipStrokeWidth="0dp"
                    app:chipBackgroundColor="?attr/chipBgColorNeutral"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="#123" />

                <!-- Status -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="?attr/accentGood"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/config_name_text"
                    tools:text="Active" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Toolbar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back_24"
                app:title="@string/lbl_server_config" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="32dp">

            <!-- Connection Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/connection_details_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:letterSpacing="0.02"
                        android:text="@string/lbl_peers"
                        android:textSize="16sp"
                        android:textColor="?attr/primaryTextColor"
                        android:textStyle="bold" />

                    <!-- Listen Port & MTU Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <!-- Listen Port -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/lbl_listen_port"
                                android:textColor="?attr/primaryLightColorText"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/listen_port_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="?attr/chipBgColorNeutral"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp" />

                        </LinearLayout>

                        <!-- MTU -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/mtu_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/lbl_mtu"
                                android:textColor="?attr/primaryLightColorText"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/mtu_text"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="?attr/chipBgColorNeutral"
                                android:gravity="center_vertical"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="15sp"
                                android:visibility="gone"
                                tools:text="1420"
                                tools:visibility="visible" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Public Key (Hidden by default) -->
                    <LinearLayout
                        android:id="@+id/public_key_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/public_key_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/lbl_public_key"
                            android:textColor="?attr/primaryLightColorText"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/public_key_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/chipBgColorNeutral"
                            android:ellipsize="middle"
                            android:fontFamily="monospace"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="12sp"
                            tools:text="abcd1234efgh5678..." />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/actions_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:letterSpacing="0.02"
                        android:text="@string/lbl_quick_actions"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/primaryTextColor"
                        android:textStyle="bold" />

                    <!-- Premium Action Buttons Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Applications Button -->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/applications_btn"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/rectangle_border_background"
                            android:foreground="?attr/selectableItemBackground"
                            android:minHeight="56dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="@string/add_remove_apps"
                            android:textAllCaps="false"
                            android:textColor="?attr/secondaryTextColor"
                            android:textSize="15sp" />

                        <!-- Hop Button -->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/hop_btn"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/rectangle_border_background"
                            android:foreground="?attr/selectableItemBackground"
                            android:minHeight="56dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="@string/hop_add_remove_title"
                            android:textAllCaps="false"
                            android:textColor="?attr/secondaryTextColor"
                            android:textSize="15sp" />

                        <!-- Logs Button -->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/logs_btn"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_border_background"
                            android:foreground="?attr/selectableItemBackground"
                            android:minHeight="56dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="@string/lbl_logs"
                            android:textAllCaps="false"
                            android:textColor="?attr/secondaryTextColor"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Configuration Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/other_settings_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:letterSpacing="0.02"
                        android:text="@string/settings_title"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/primaryTextColor"
                        android:textStyle="bold" />

                    <!-- Lockdown Mode -->
                    <RelativeLayout
                        android:id="@+id/lockdown_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:minHeight="64dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/lockdown_check"
                            android:orientation="vertical"
                            android:paddingStart="0dp"
                            android:paddingEnd="16dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wg_lockdown_dialog_title"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/lockdown_desc"
                                android:textColor="?attr/primaryLightColorText"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/lockdown_check"
                            style="@style/CustomWidget.MaterialComponents.CompoundButton.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.08"
                        android:background="?attr/divider" />

                    <!-- Catch All Mode -->
                    <RelativeLayout
                        android:id="@+id/catch_all_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:minHeight="64dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/catch_all_check"
                            android:orientation="vertical"
                            android:paddingStart="0dp"
                            android:paddingEnd="16dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/catch_all_wg_dialog_title"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/catch_all_wg_dialog_desc"
                                android:textColor="?attr/primaryLightColorText"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/catch_all_check"
                            style="@style/CustomWidget.MaterialComponents.CompoundButton.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Advanced Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mobile_ssid_settings_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:letterSpacing="0.02"
                        android:text="@string/adv_taster_title"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/primaryTextColor"
                        android:textStyle="bold" />

                    <!-- Mobile Data Only -->
                    <RelativeLayout
                        android:id="@+id/use_mobile_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:minHeight="64dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/use_mobile_check"
                            android:orientation="vertical"
                            android:paddingStart="0dp"
                            android:paddingEnd="16dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wg_setting_use_on_mobile"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/wg_setting_use_on_mobile_desc"
                                android:textColor="?attr/primaryLightColorText"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/use_mobile_check"
                            style="@style/CustomWidget.MaterialComponents.CompoundButton.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.08"
                        android:background="?attr/divider" />

                    <!-- SSID Filter -->
                    <RelativeLayout
                        android:id="@+id/ssid_filter_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:minHeight="64dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/ssid_check"
                            android:orientation="vertical"
                            android:paddingStart="0dp"
                            android:paddingEnd="16dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wg_setting_ssid_title"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/wg_setting_ssid_desc"
                                android:textColor="?attr/primaryLightColorText"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/ssid_check"
                            style="@style/CustomWidget.MaterialComponents.CompoundButton.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Peers Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/peers_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/wg_header_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:letterSpacing="0.02"
                        android:text="@string/lbl_peers"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="?attr/primaryTextColor"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/peers_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/list_item_wg_peers" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

