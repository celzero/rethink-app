<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="@dimen/default_font_text_view"
            android:lineSpacingExtra="4sp"
            android:textColor="?attr/primaryTextColor"
            android:textStyle="italic"
            android:text="@string/whats_new_version_text_v53f"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sub_heading"
            android:text="@string/whats_new_version_name"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/heading_font_text_view"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:lineSpacingExtra="4sp"
            android:textColor="?attr/primaryTextColor"
            android:text="@string/whats_new_version_update"
            android:textSize="@dimen/large_font_text_view" />


    </LinearLayout>
</ScrollView>