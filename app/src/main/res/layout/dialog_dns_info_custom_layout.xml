<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_scrollFlags="scroll|enterAlways">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/query_info_dialog_cancel_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="@string/dns_mode_0"
            android:textSize="@dimen/heading_font_text_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:drawableStartCompat="@drawable/dns_no_filter" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:padding="10dp"
            android:textSize="@dimen/large_font_text_view"
            android:text="@string/dns_mode_0_explanation"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="@string/dns_mode_1"
            android:textSize="@dimen/heading_font_text_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:drawableStartCompat="@drawable/dns_family" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:padding="10dp"
            android:textSize="@dimen/large_font_text_view"
            android:text="@string/dns_mode_1_explanation"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="@string/dns_mode_2"
            android:textSize="@dimen/heading_font_text_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:drawableStartCompat="@drawable/idns_ad_malware" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:lineSpacingExtra="5dp"
            android:padding="10dp"
            android:textSize="@dimen/large_font_text_view"
            android:text="@string/dns_mode_2_explanation"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="@string/dns_mode_3"
            android:textSize="@dimen/heading_font_text_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:drawableStartCompat="@drawable/dns_custom_url" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:lineSpacingExtra="5dp"
            android:padding="10dp"
            android:textSize="@dimen/large_font_text_view"
            android:text="@string/dns_mode_3_explanation"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="@string/dns_mode_4"
            android:textSize="@dimen/heading_font_text_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:drawableStartCompat="@drawable/dns_bravedns" />

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:lineSpacingExtra="5dp"
            android:padding="10dp"
            android:textSize="@dimen/large_font_text_view"
            android:text="@string/dns_mode_4_explanation"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/info_dialog_cancel_btn"
            style="@style/TextAppearance.AppCompat.Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background_ripple"
            android:text="Ok"
            android:textSize="@dimen/large_font_text_view"
            android:visibility="gone" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>