<resources>

    <style name="AppThemeInitial" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorBackgroundFloating">@color/colorPrimary</item>
        <item name="android:colorBackgroundFloating">@color/colorPrimary</item>
        <item name="colorAccent">@color/accent_good</item>
        <item name="accentGood">@color/accent_good</item>
        <item name="accentBad">@color/accent_bad</item>
        <item name="colorSwitchThumbNormal">@color/neutral</item>
        <item name="colorCheckSelected">@color/accent_bad</item>
        <item name="android:buttonStyleToggle">@android:style/Widget.Material.Button.Toggle</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Action</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="background">@color/background</item>
        <item name="searchViewStyle">@style/SearchView_custom</item>
        <item name="primaryTextColor">@color/primaryText</item>
        <item name="primaryDarkColorText">@color/primaryText</item>
        <item name="primaryLightColorText">@color/textColorMain</item>
        <item name="secondaryTextColor">@color/secondaryText</item>
        <item name="divider">@color/neutral</item>
        <item name="roundedCornersButton">@drawable/rounded_corners_button_accent</item>
        <item name="homeScreenBtnBackground">@color/black</item>
        <item name="svgStrokeColor">@color/stroke_color</item>
        <item name="svgFillColor">@color/fill_color</item>
        <item name="mainButtonBackground">@color/button_background_tint</item>
        <item name="border">@color/borderBlack</item>
        <item name="invertedPrimaryTextColor">@color/accent_good</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="navBarBackground">@color/navBarBackground</item>
        <item name="buttonBackground">@color/buttonBackground</item>
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="tabIndicator">@color/accent_good</item>
        <item name="chipBgColorPositive">@color/chipBgPositiveApp</item>
        <item name="chipTextPositive">@color/chipTextPositiveApp</item>
        <item name="chipBgColorNegative">@color/chipBgNegativeApp</item>
        <item name="chipTextNegative">@color/chipTextNegativeApp</item>
        <item name="chipColorBgNormal">@color/chipColorBgNormalApp</item>
        <item name="chipColorBgHighlight">@color/chipColorBgHighlightApp</item>
    </style>

    <style name="AppThemeWhite" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_dark_white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_white</item>
        <item name="colorBackgroundFloating">@color/colorFloating_white</item>
        <item name="android:colorBackgroundFloating">@color/colorFloating_white</item>
        <item name="colorAccent">@color/negative_white</item>
        <item name="accentGood">@color/negative_white</item>
        <item name="accentBad">@color/accent_bad_white</item>
        <item name="colorCheckSelected">@color/negative_white</item>
        <item name="colorSwitchThumbNormal">@color/neutral_white</item>
        <item name="android:buttonStyleToggle">@android:style/Widget.Material.Button.Toggle</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Action</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="background">@color/colorPrimary_white</item>
        <item name="searchViewStyle">@style/SearchView_custom</item>
        <item name="primaryTextColor">@color/black_white</item>
        <item name="primaryDarkColorText">@color/colorPrimary_white</item>
        <item name="primaryLightColorText">@color/black_white</item>
        <item name="secondaryTextColor">@color/colorPrimaryDark_white</item>
        <item name="divider">@color/main_button_disabled</item>
        <item name="roundedCornersButton">@drawable/rounded_corners_button_primary</item>
        <item name="homeScreenBtnBackground">@color/lightColorPrimary_white</item>
        <item name="svgStrokeColor">@color/stroke_color_white</item>
        <item name="svgFillColor">@color/fill_color_white</item>
        <item name="mainButtonBackground">@color/lightColorPrimary_white</item>
        <item name="border">@color/border_white</item>
        <item name="invertedPrimaryTextColor">@color/white</item>
        <item name="android:navigationBarColor">@color/navBarBackgroundWhite</item>
        <item name="navBarBackground">@color/navBarBackgroundWhite</item>
        <item name="buttonBackground">@color/buttonBackgroundWhite</item>
        <item name="colorSurface">@color/navBarBackgroundWhite</item>
        <item name="tabIndicator">@color/accent_bad</item>
        <item name="chipBgColorPositive">@color/chipBgPositiveWhite</item>
        <item name="chipTextPositive">@color/chipTextPositiveWhite</item>
        <item name="chipBgColorNegative">@color/chipBgNegativeWhite</item>
        <item name="chipTextNegative">@color/chipTextNegativeWhite</item>
        <item name="chipColorBgNormal">@color/chipColorBgNormalWhite</item>
        <item name="chipColorBgHighlight">@color/chipColorBgHighlightWhite</item>
    </style>

    <style name="AppThemeTrueBlack" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorSecondary">@color/accentGoodBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlackTheme</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryBlack</item>
        <item name="android:colorBackgroundFloating">@color/colorPrimaryBlack</item>
        <item name="colorAccent">@color/accentGoodBlack</item>
        <item name="accentGood">@color/accentGoodBlack</item>
        <item name="accentBad">@color/accentBadBlack</item>
        <item name="colorSwitchThumbNormal">@color/neutralBlack</item>
        <item name="colorCheckSelected">@color/negative</item>
        <item name="android:buttonStyleToggle">@android:style/Widget.Material.Button.Toggle</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Action</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="background">@color/colorBackgroundBlack</item>
        <item name="searchViewStyle">@style/SearchView_custom</item>
        <item name="primaryTextColor">@color/primaryText</item>
        <item name="primaryDarkColorText">@color/primaryText</item>
        <item name="primaryLightColorText">@color/background_dark_white</item>
        <item name="secondaryTextColor">@color/accent_good</item>
        <item name="divider">@color/neutral</item>
        <item name="roundedCornersButton">@drawable/rounded_corners_button_accent</item>
        <item name="homeScreenBtnBackground">@color/black</item>
        <item name="svgStrokeColor">@color/stroke_color</item>
        <item name="svgFillColor">@color/fill_color</item>
        <item name="mainButtonBackground">@color/accentGoodBlack</item>
        <item name="border">@color/borderBlack</item>
        <item name="invertedPrimaryTextColor">@color/accentGoodBlack</item>
        <item name="android:navigationBarColor">@color/black_white</item>
        <item name="navBarBackground">@color/navBarBackgroundBlack</item>
        <item name="buttonBackground">@color/buttonBackgroundBlack</item>
        <item name="colorSurface">@color/navBarBackgroundBlack</item>
        <item name="tabIndicator">@color/accentGoodBlack</item>
        <item name="chipBgColorPositive">@color/chipBgPositiveBlack</item>
        <item name="chipTextPositive">@color/chipTextPositiveBlack</item>
        <item name="chipBgColorNegative">@color/chipBgNegativeBlack</item>
        <item name="chipTextNegative">@color/chipTextNegativeBlack</item>
        <item name="chipColorBgNormal">@color/chipColorBgNormalBlack</item>
        <item name="chipColorBgHighlight">@color/chipColorBgHighlightBlack</item>
    </style>


    <style name="CustomWidget.MaterialComponents.CompoundButton.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/CustomCompoundButton_Switch</item>
    </style>

    <style name="CustomWidget.MaterialComponents.CompoundButton.Switch.Bad" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/CustomCompoundButton_Switch_bad</item>
    </style>


    <style name="CustomCompoundButton_Switch">
        <item name="colorSurface">@color/neutral</item>
        <item name="colorOnSurface">@color/neutral</item>
        <item name="colorControlActivated">?attr/accentGood</item>
    </style>

    <style name="CustomCompoundButton_Switch_bad">
        <item name="colorSurface">@color/neutral</item>
        <item name="colorOnSurface">@color/neutral</item>
        <item name="colorControlHighlight">@color/negative</item>
        <item name="colorControlActivated">@color/negative</item>
        <item name="android:colorControlHighlight">@color/negative</item>
        <item name="android:colorControlActivated">@color/negative</item>
        <item name="colorAccent">@color/negative</item>
        <item name="android:colorAccent">@color/negative</item>
        <item name="android:thumbTint">@color/negative</item>
        <item name="android:thumbTintMode">@color/negative</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">?attr/accentBad</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/neutral</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/primaryText</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/childListColor</item>
    </style>

    <style name="BottomSheetDialogThemeWhite" parent="BaseBottomSheetDialog">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">?attr/accentBad</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/neutral</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/primaryText</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/colorPrimary_white</item>
    </style>

    <style name="BottomSheetDialogThemeTrueBlack" parent="BaseBottomSheetDialog">
           <!-- Active thumb color & Active track color(30% transparency) -->
           <item name="colorControlActivated">?attr/accentBad</item>
           <!-- Inactive thumb color -->
           <item name="colorSwitchThumbNormal">@color/neutral</item>
           <!-- Inactive track color(30% transparency) -->
           <item name="android:colorForeground">@color/primaryText</item>
           <item name="android:windowIsFloating">false</item>
           <item name="android:navigationBarColor">@color/colorBackgroundBlack</item>
       </style>

    <style name="SearchView_custom" parent="Widget.AppCompat.SearchView">
        <item name="searchViewStyle">@style/Widget.AppCompat.Light.SearchView</item>
        <item name="android:maxWidth">@dimen/maxSize</item>
    </style>

    <style name="SwitchCompat_theme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">?attr/accentBad</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/neutral</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/neutral</item>
    </style>

    <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="android:textSize">11sp</item>
        <item name="chipMinTouchTargetSize">30dp</item>
    </style>

    <style name="ThinnerChip_large" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">18dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipMinTouchTargetSize">40dp</item>
    </style>

    <style name="ThinnerChip_action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="android:textSize">11sp</item>
        <item name="chipMinTouchTargetSize">30dp</item>
        <item name="chipIconSize">15dp</item>
    </style>

    <style name="ThinnerChip_entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="android:textSize">11sp</item>
        <item name="chipMinTouchTargetSize">30dp</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
      <item name="cornerFamily">rounded</item>
      <item name="cornerSize">1dp</item>
      <item name="cornerRadius">1dp</item>
      <item name="chipCornerRadius">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipMinHeight">40dp</item>
      <item name="chipMinTouchTargetSize">40dp</item>
    </style>


</resources>
