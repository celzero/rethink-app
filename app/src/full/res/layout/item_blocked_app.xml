<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:strokeWidth="0.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/blocked_app_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/blocked_app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            android:textColor="?attr/primaryTextColor"
            app:layout_constraintStart_toEndOf="@id/blocked_app_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/blocked_app_allow_btn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/blocked_app_package"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/secondaryTextColor"
            android:alpha="0.85"
            app:layout_constraintStart_toEndOf="@id/blocked_app_icon"
            app:layout_constraintTop_toBottomOf="@id/blocked_app_name"
            app:layout_constraintEnd_toStartOf="@id/blocked_app_allow_btn" />

        <com.google.android.material.chip.Chip
            android:id="@+id/blocked_app_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:chipCornerRadius="10dp"
            app:chipMinHeight="28dp"
            app:chipStrokeWidth="0dp"
            app:textStartPadding="8dp"
            app:textEndPadding="8dp"
            android:textColor="?attr/accentBad"
            app:layout_constraintStart_toEndOf="@id/blocked_app_icon"
            app:layout_constraintTop_toBottomOf="@id/blocked_app_package" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/blocked_app_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/primaryLightColorText"
            android:alpha="0.85"
            app:layout_constraintStart_toEndOf="@id/blocked_app_count"
            app:layout_constraintTop_toBottomOf="@id/blocked_app_package" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/blocked_app_allow_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/bubble_allow_btn"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:cornerRadius="18dp"
            app:iconGravity="textStart"
            app:iconTint="?attr/accentGood"
            android:textColor="?attr/accentGood"
            app:iconPadding="6dp"
            app:iconSize="16dp"
            app:icon="@drawable/ic_firewall_shield"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
