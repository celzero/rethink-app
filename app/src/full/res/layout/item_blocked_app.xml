<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="?attr/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/blocked_icon_container"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/blocked_app_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/default_app_icon"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/blocked_app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            android:textColor="?attr/primaryTextColor"
            app:layout_constraintStart_toEndOf="@id/blocked_icon_container"
            app:layout_constraintTop_toTopOf="@id/blocked_icon_container"
            app:layout_constraintEnd_toStartOf="@id/blocked_app_allow_btn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/blocked_app_package"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="?attr/primaryLightColorText"
            app:layout_constraintStart_toEndOf="@id/blocked_icon_container"
            app:layout_constraintTop_toBottomOf="@id/blocked_app_name"
            app:layout_constraintEnd_toStartOf="@id/blocked_app_allow_btn" />

        <!-- Count + time row -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/blocked_app_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="?attr/accentBad"
            app:layout_constraintStart_toEndOf="@id/blocked_icon_container"
            app:layout_constraintTop_toBottomOf="@id/blocked_app_package" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/blocked_app_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="?attr/primaryLightColorText"
            app:layout_constraintStart_toEndOf="@id/blocked_app_count"
            app:layout_constraintTop_toBottomOf="@id/blocked_app_package"
            app:layout_constraintEnd_toStartOf="@id/blocked_app_allow_btn" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/blocked_app_allow_btn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="34dp"
            android:text="@string/bubble_allow_btn"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="?attr/accentGood"
            app:cornerRadius="17dp"
            app:iconPadding="6dp"
            app:iconSize="16dp"
            app:iconTint="?attr/accentGood"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
