<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_scrollFlags="scroll|enterAlways">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fhs_title_rethink"
                style="@style/TextAppearance.Heading.HomeScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:text="@string/app_name_small_case" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fhs_title_rethink_desc"
                style="@style/TextAppearance.SubHeading.HomeScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/about_title_desc" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:elevation="10dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:text="@string/about_bravedns_explantion"
                        android:textSize="@dimen/large_font_text_view" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/about_bravedns_whoarewe"
                        android:textSize="@dimen/large_font_text_view" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/about_sponsor"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rectangle_border_background"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_heart"
                    android:drawablePadding="-15dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp"
                    android:text="@string/about_sponsor_link_text"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/large_font_text_view" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:baselineAligned="true"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/about_telegram"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_border_background"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_telegram"
                    android:drawablePadding="-15dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp"
                    android:text="@string/about_join_telegram"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/large_font_text_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="10dp"
                    android:text="@string/about_bravedns_toreport_text"
                    android:textSize="@dimen/large_font_text_view" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.5"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/progressBar"
                        android:padding="2dp"
                        android:text="@string/collecting_logs_progress_text"
                        android:textColor="?attr/colorSecondary" />
                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/about_crash_log"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_border_background"
                    android:clickable="true"
                    android:drawableStart="@drawable/report_bug_icon"
                    android:drawablePadding="-15dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp"
                    android:text="@string/about_bug_report"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/large_font_text_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="10dp"
                    android:text="@string/about_bug_report_desc"
                    android:textSize="@dimen/large_font_text_view" />


            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_sponsor"
                android:textColor="?attr/accentGood"
                android:textSize="@dimen/extra_large_font_text_view"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_heart"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_sponsor_link_text"
                android:textSize="@dimen/large_font_text_view" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="15dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_app"
                android:textColor="?attr/accentGood"
                android:textSize="@dimen/extra_large_font_text_view"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_whats_new"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_whats_new"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_whats_new"
                android:textSize="@dimen/large_font_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_app_update"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_update"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_app_update_check"
                android:textSize="@dimen/large_font_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_app_contributors"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_authors"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_app_contributors"
                android:textSize="@dimen/large_font_text_view" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="15dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_web"
                android:textColor="?attr/accentGood"
                android:textSize="@dimen/extra_large_font_text_view"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_website"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_website"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_website"
                android:textSize="@dimen/large_font_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_github"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_github"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_github"
                android:textSize="@dimen/large_font_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_faq"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_faq"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_faq"
                android:textSize="@dimen/large_font_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_blog"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_blog"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_docs"
                android:textSize="@dimen/large_font_text_view" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_connect"
                android:textColor="?attr/accentGood"
                android:textSize="@dimen/extra_large_font_text_view"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_mail"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_email"
                android:textSize="@dimen/large_font_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_twitter"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_twitter"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_twitter"
                android:textSize="@dimen/large_font_text_view" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_settings"
                android:textColor="?attr/accentGood"
                android:textSize="@dimen/extra_large_font_text_view"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_app_info"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_app_info"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_settings_app_info"
                android:textSize="@dimen/large_font_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_vpn_profile"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_about_key"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_settings_vpn_profile"
                android:textSize="@dimen/large_font_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_app_notification"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_notification"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/about_settings_notification"
                android:textSize="@dimen/large_font_text_view" />


        </LinearLayout>

        <ImageView
            android:id="@+id/mozilla_img"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/about_mozilla"
            android:src="@drawable/mozilla" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/about_mozilla"
            android:textColor="?attr/primaryLightColorText"
            android:textSize="@dimen/default_font_text_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about_app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="40dp"
            android:textIsSelectable="true"
            android:textSize="@dimen/default_font_text_view"
            android:typeface="monospace" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
