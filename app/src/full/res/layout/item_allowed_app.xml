<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="?attr/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Icon container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/allowed_icon_container"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/allowed_app_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                tools:src="@drawable/ic_launcher_foreground" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/allowed_app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            android:textColor="?attr/primaryTextColor"
            tools:text="Chrome Browser"
            app:layout_constraintStart_toEndOf="@id/allowed_icon_container"
            app:layout_constraintTop_toTopOf="@id/allowed_icon_container"
            app:layout_constraintEnd_toStartOf="@id/allowed_remove_btn" />

        <TextView
            android:id="@+id/allowed_time_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="?attr/secondaryTextColor"
            tools:text="12 mins remaining"
            app:layout_constraintStart_toEndOf="@id/allowed_icon_container"
            app:layout_constraintTop_toBottomOf="@id/allowed_app_name"
            app:layout_constraintEnd_toStartOf="@id/allowed_remove_btn" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/allowed_remove_btn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="34dp"
            android:text="Remove"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="?attr/accentBad"
            app:cornerRadius="17dp"
            app:rippleColor="?attr/colorControlHighlight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
