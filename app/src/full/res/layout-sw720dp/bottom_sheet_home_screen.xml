<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bs_conn_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/default_padding"
    android:paddingEnd="@dimen/default_padding"
    android:paddingBottom="48dp">

    <TextView
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/border" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/bs_home_screen_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/app_mode_choose"
            android:textColor="?attr/primaryLightColorText"
            android:textIsSelectable="true"
            android:textSize="@dimen/extra_large_font_text_view"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bs_home_screen_vpn_lockdown_desc"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:text="@string/hs_btm_sheet_lock_down"
        android:textAlignment="center"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/default_font_text_view"
        android:visibility="gone" />

    <!-- Enhanced spacing for tablet touch targets -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:id="@+id/bs_home_screen_dns_rl"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/bs_home_screen_dns_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/dns_home_screen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/bs_home_screen_dns_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bs_home_screen_dns_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hsf_dns_mode"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/large_font_text_view"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bs_home_screen_dns_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/hsf_dns_mode_desc"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/default_font_text_view" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bs_home_screen_dns_firewall_rl"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/bs_home_screen_dns_firewall_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/firewall_home_screen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/bs_home_screen_dns_firewall_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bs_home_screen_dns_firewall_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hsf_dns_firewall_mode"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/large_font_text_view"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bs_home_screen_dns_firewall_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/hsf_dns_firewall_mode_desc"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/default_font_text_view" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bs_home_screen_firewall_rl"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/bs_home_screen_firewall_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_firewall_accent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/bs_home_screen_firewall_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bs_home_screen_firewall_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hsf_firewall_mode"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/large_font_text_view"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bs_home_screen_firewall_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/hsf_firewall_mode_desc"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/default_font_text_view" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bs_home_screen_off_rl"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/bs_home_screen_off_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_pause" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/bs_home_screen_off_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bs_home_screen_off_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hsf_pause_mode"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/large_font_text_view"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bs_home_screen_off_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/hsf_pause_mode_desc"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/default_font_text_view" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bs_home_screen_separator_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?attr/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="@string/hs_btm_sheet_tunnel_heading"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="@dimen/small_font_text_view"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?attr/divider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:id="@+id/bs_home_screen_proxy_rl"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/bs_home_screen_proxy_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_vpn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/bs_home_screen_proxy_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bs_home_screen_proxy_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_custom_dns_proxy_name_default"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/large_font_text_view"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bs_home_screen_proxy_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/hs_btm_sheet_proxy_desc"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/default_font_text_view" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bs_home_screen_wireguard_rl"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/bs_home_screen_wireguard_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_wireguard_accent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/bs_home_screen_wireguard_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bs_home_screen_wireguard_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_wireguard"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/large_font_text_view"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bs_home_screen_wireguard_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/hs_btm_sheet_wireguard_desc"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/default_font_text_view" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>